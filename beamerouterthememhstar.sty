% Headline and footline
\defbeamertemplate*{footline}{mhstar theme} {
  \leavevmode%
  \hbox{
  \begin{beamercolorbox}[wd=.3\paperwidth,left,ht=2.5ex,dp=1.125ex,leftskip=.3cm, rightskip=.3cm plus1fil]{author in head/foot}%
    \usebeamerfont{author in head/foot}
	\insertshortauthor  
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.45\paperwidth,center,ht=2.5ex,dp=1.125ex,leftskip=.3cm,rightskip=.3cm]{title in head/foot}%
    \usebeamerfont{title in head/foot}{\centering \textit \insertshorttitle}%
 \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.25\paperwidth,right,ht=2.5ex,dp=1.125ex,leftskip=.3cm,rightskip=.3cm plus1fil]{title in head/foot}%
		% \insertpagenumber\,/\,\insertpresentationendpage %% Want FRAME, not SLIDE number
		\insertdate\space\space
        \pgfmathrandomitem{\rndsplit}{randomshape}
        %\Summertree[2.0]
        {\color{green}\rndsplit}
        \space\space\insertframenumber/\inserttotalframenumber
 \end{beamercolorbox}%
 }
}

