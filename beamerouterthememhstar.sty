  }
}

\defbeamertemplate*{frametitle}{mhstar theme} {
  \leavevmode%
  \begin{beamercolorbox}[wd=\paperwidth,ht=2.5ex,dp=0.7ex,leftskip=.3cm, rightskip=.3cm]{frametitle}%
    \vspace{+1ex}
    \usebeamerfont{frametitle}
    \insertframetitle
  \end{beamercolorbox}%
}
